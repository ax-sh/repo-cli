{
  "name": "@ax-sh/repo-cli",
  "version": "0.6.0",
  "private": true,
  "packageManager": "bun@1.2.5",
  "description": "repo CLI for ",
  "license": "MIT",
  "types": "build/types/types.d.ts",
  "bin": {
    "repo": "bin/repo"
  },
  "files": [
    "LICENSE",
    "bin",
    "build",
    "docs",
    "readme.md"
  ],
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "nr clean-build && nr compile && nr copy-templates",
    "prepublishOnly": "nr build",
    "lint": "eslint",
    "lint:fix": "nr lint --fix",
    "lint:types": "tsc --noEmit",
    "lintt": "nr lint --format=pretty",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "test": "vitest run",
    "watch": "vitest",
    "snapupdate": "vitest --update",
    "coverage": "vitest --coverage",
    "knip": "knip",
    "release": "dotenv -v DEBUG=1 release-it -- minor --no-git.push --no-git.requireUpstream --ci",
    "changelog:latest": "nr git-cliff -l",
    "upp": "bunx npm-check-updates -i",
    "ox": "nr oxlint",
    "tag": "bun exec 'VERSION=$(git cliff --bumped-version) && git tag $VERSION && git push origin $VERSION && git cliff -l -s all | gh release create $VERSION --notes-file -' && npm pkg fix"
  },
  "dependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@ax-sh/ts-morph-kit": "^0.6.0",
    "@types/app-root-path": "^1.2.8",
    "app-root-path": "^3.1.0",
    "execa": "^9.5.2",
    "gluegun": "latest"
  },
  "devDependencies": {
    "@release-it/bumper": "^7.0.2",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-formatter-pretty": "6",
    "eslint-plugin-prettier": "^5.2.3",
    "git-cliff": "^2.8.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "knip": "^5.46.0",
    "oxlint": "^0.16.0",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.1.1",
    "release-it": "^18.1.2",
    "tsx": "^4.19.3",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
