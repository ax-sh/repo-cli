{
  "name": "@ax-sh/repo-cli",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.2.5",
  "description": "repo CLI for ",
  "license": "MIT",
  "types": "build/types/types.d.ts",
  "bin": {
    "repo": "bin/repo"
  },
  "files": [
    "LICENSE",
    "bin",
    "build",
    "docs",
    "readme.md"
  ],
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "nr clean-build && nr compile && nr copy-templates",
    "prepublishOnly": "nr build",
    "lint": "eslint",
    "lint:fix": "nr lint --fix",
    "lintt": "nr lint --format=pretty",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "test": "vitest run",
    "watch": "vitest",
    "snapupdate": "vitest --update",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@types/app-root-path": "^1.2.8",
    "app-root-path": "^3.1.0",
    "gluegun": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-formatter-pretty": "6",
    "eslint-plugin-prettier": "^3.3.1",
    "git-cliff": "^2.8.0",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
