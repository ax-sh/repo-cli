import type { GluegunCommand } from 'gluegun'
import type { ExtendedToolbox } from '../types';

const command: GluegunCommand<ExtendedToolbox> = {
    name: '<%= props.name %>',
    run: async (toolbox) => {
        const {
            print,
            lib
        } = toolbox

        const name = toolbox.parameters.first

        const spinner = print.spin()
        const root = await import('../services/<%= props.name %>/<%= props.name %>.service')
        const result = await lib.runFromPromiseWithErrorHandlerWrapper(root.run());
        if (result.isErr()) {
            spinner.fail()
            throw result.error
        }
        const out = result.value
        spinner.succeed(`Todo <%= props.name %> ${name}`)

        print.highlight(`Run Out <%= props.name %> ${out}`)

        await toolbox.system.run('echo ni -D husky')
    },
}

export default command;