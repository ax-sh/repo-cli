{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2022", "scripthost", "dom"],
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "build/types",
    // For production builds, it's generally recommended to disable source maps to optimize file size and load times.
    // "sourceMap": true,
    "inlineSourceMap": true,
    "outDir": "build",
    //    When allowSyntheticDefaultImports: true allows you to write an import like:
    //    import React from "react";
    //    instead of:
    //    import * as React from "react";
    //    Enabling esModuleInterop will also enable allowSyntheticDefaultImports.
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
